<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <img class="card-img-top" src="{{post.image}}" alt="Portada de {{post.title}}" style="height: 450px;">
      <div class="card-body d-flex flex-column">

          <div class="d-flex flex-row justify-content-center align-items-center mb-3">
            <a data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Ver Perfil de {{userProfile.name}}"
              href="/profile/{{userProfile._id}}"><img src="{{userProfile.avatar}}" alt="Avatar {{userProfile.name}}"
                class="rounded-circle" style="max-width: 70px;"></a>

          </div>

        <h2 class="text-center">{{post.title}}</h2>

        <div id="" class="mt-5 mb-5">
          {{{post.body}}}
        </div>
        {{> share}}
      </div>
    </div>
  </div>

  {{> listComments}}

  {{#if user}}
  {{> createComment}}
  {{/if}}

</div>

<script>
  const whatsapp = document.querySelector('.whatsapp')
  const telegram = document.querySelector('.telegram')
  const twitter = document.querySelector('.twitter')
  const pageUrl = location.href
  const message = 'Mira este post! '
  const apiwsp = `https://wa.me/?text=${message}. ${pageUrl}`
  const apitwitter = `https://twitter.com/intent/tweet?text=${pageUrl}. ${message}`
  const apitelegram = `https://t.me/share/url?url=${pageUrl}&text=${message}`

  whatsapp.addEventListener('click', () => {
    window.open(url = apiwsp, target = 'blank')
  })
  twitter.addEventListener('click', () => {
    window.open(url = apitwitter, target = 'blank')
  })
  telegram.addEventListener('click', () => {
    window.open(url = apitelegram, target = 'blank')
  })

</script>